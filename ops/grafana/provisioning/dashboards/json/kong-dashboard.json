{
  "dashboard": {
    "title": "Kong API Gateway Metrics",
    "tags": ["kong", "api-gateway"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/sec)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(kong_http_requests_total[1m])",
            "legendFormat": "{{service}} - {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Response Status Codes",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(kong_http_requests_total{code=~\"2..\"}[1m])",
            "legendFormat": "2xx Success",
            "refId": "A"
          },
          {
            "expr": "rate(kong_http_requests_total{code=~\"4..\"}[1m])",
            "legendFormat": "4xx Client Errors",
            "refId": "B"
          },
          {
            "expr": "rate(kong_http_requests_total{code=~\"5..\"}[1m])",
            "legendFormat": "5xx Server Errors",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Request Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(kong_latency_bucket[1m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(kong_latency_bucket[1m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(kong_latency_bucket[1m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Bandwidth (In/Out)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(kong_bandwidth{type=\"ingress\"}[1m])",
            "legendFormat": "Ingress",
            "refId": "A"
          },
          {
            "expr": "rate(kong_bandwidth{type=\"egress\"}[1m])",
            "legendFormat": "Egress",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Bps", "label": "Bytes/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Kong Upstream Latency",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(kong_upstream_latency_ms_bucket[1m]))",
            "legendFormat": "{{service}} p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Upstream Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Requests by Route",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(kong_http_requests_total[1m])",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Requests by Consumer (JWT Users)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(kong_http_requests_total{consumer!=\"\"}[1m])",
            "legendFormat": "{{consumer}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Error Rate (%)",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "sum(rate(kong_http_requests_total{code=~\"5..\"}[5m])) / sum(rate(kong_http_requests_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "format": "percent",
        "valueName": "current",
        "thresholds": "1,5",
        "colors": ["#299c46", "#e0b400", "#d44a3a"]
      },
      {
        "id": 9,
        "title": "Total Requests (5m)",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 24},
        "targets": [
          {
            "expr": "sum(increase(kong_http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current"
      },
      {
        "id": 10,
        "title": "Kong Data Plane Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "kong_datastore_reachable",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {"Value": "Status"}
            }
          }
        ]
      }
    ]
  }
}