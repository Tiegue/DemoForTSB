<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- customers table -->
    <changeSet id="2-create-customer-table" author="Tiegue">
        <createTable tableName="customer">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone_number" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="date_of_birth" type="DATE"/>
            <column name="national_id" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

            <!-- Password hash column for BCrypt -->
            <column name="password_hash" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>

            <!-- Application-managed timestamps -->
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- ==================== Account Table ==================== -->
    <changeSet id="2-create-account-table" author="Tiegue">
        <createTable tableName="account">
            <column name="account_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="account_number" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="balance" type="DECIMAL(10,2)" defaultValueNumeric="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="currency_code" type="CHAR(3)" defaultValue="NZD">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="account"
                                 baseColumnNames="customer_id"
                                 referencedTableName="customer"
                                 referencedColumnNames="id"
                                 constraintName="fk_account_customer"/>

        <createIndex tableName="account" indexName="idx_account_customer_id">
            <column name="customer_id"/>
        </createIndex>

        <createIndex tableName="account" indexName="idx_account_number">
            <column name="account_number"/>
        </createIndex>

        <createIndex tableName="account" indexName="idx_account_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

    <!-- ==================== Transaction Table ==================== -->
    <changeSet id="3-create-transaction-table" author="Tiegue">
        <createTable tableName="transaction">
            <column name="transaction_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="transaction_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="transaction_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="from_account_id" type="BIGINT"/>
            <column name="to_account_id" type="BIGINT"/>
            <column name="transaction_status" type="VARCHAR(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="currency_code" type="CHAR(3)" defaultValue="NZD">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="transaction"
                                 baseColumnNames="account_id"
                                 referencedTableName="account"
                                 referencedColumnNames="account_id"
                                 constraintName="fk_transaction_account"/>

        <addForeignKeyConstraint baseTableName="transaction"
                                 baseColumnNames="from_account_id"
                                 referencedTableName="account"
                                 referencedColumnNames="account_id"
                                 constraintName="fk_transaction_from_account"/>

        <addForeignKeyConstraint baseTableName="transaction"
                                 baseColumnNames="to_account_id"
                                 referencedTableName="account"
                                 referencedColumnNames="account_id"
                                 constraintName="fk_transaction_to_account"/>

        <createIndex tableName="transaction" indexName="idx_transaction_account_id">
            <column name="account_id"/>
        </createIndex>

        <createIndex tableName="transaction" indexName="idx_transaction_date">
            <column name="transaction_date"/>
        </createIndex>

        <createIndex tableName="transaction" indexName="idx_transaction_type">
            <column name="transaction_type"/>
        </createIndex>

        <createIndex tableName="transaction" indexName="idx_transaction_status">
            <column name="transaction_status"/>
        </createIndex>

        <createIndex tableName="transaction" indexName="idx_transaction_from_to">
            <column name="from_account_id"/>
            <column name="to_account_id"/>
        </createIndex>
    </changeSet>



</databaseChangeLog>